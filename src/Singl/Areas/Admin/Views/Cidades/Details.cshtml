@model Singl.Models.Cidade
@{ Singl.Models.SetorConhecimento setorConhecimento = null; }

@{
    ViewBag.Title = $"Detalhes da cidade \"{@Model.Nome}\"";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@ViewBag.Title</h2>
                <hr class="hard"/>
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                    </dl>
                </div>
                <hr class="hard"/>
                <div class="pull-right">
                    <a href="/admin/cidades/edit/@Model.Id" class="btn btn-warning">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar</a>
                </div>
                <div>
                    <a href="javascript:history.go(-1)">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</section>

