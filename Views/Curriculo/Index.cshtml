@model Neadm.ViewModels.CurriculoIndexViewModel
@{var dummy = new Neadm.Models.Curriculo();}

@{
    ViewBag.Title = $"Lista de curr√≠culos do curso \"{@Model.Curso.Nome}\"";
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@ViewBag.Title</h2>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => dummy.Ano)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => dummy.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => dummy.PrazoConclusaoIdeal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => dummy.PrazoConclusaoMaximo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => dummy.Regime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => dummy.Series)
                        </th>
                        <th></th>
                    </tr>
                    
                @foreach (var item in Model.Curriculos) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ano)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrazoConclusaoIdeal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrazoConclusaoMaximo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Regime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Series)
                        </td>
                        <td>
                            <a asp-controller="Curriculo" asp-action="Details" asp-route-id="@item.Id" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Detalhes</a>
                            <a asp-controller="Curriculo" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar</a>
                            <a asp-controller="Curriculo" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a>
                        </td>
                    </tr>
                }
                </table>
                <div>
                    <a asp-controller="Curso" asp-action="Details" asp-route-id="@Model.Curso.Id">Voltar ao curso</a>
                </div>                
            </div>
        </div>
    </div>
</section>