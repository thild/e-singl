@model Singl.Models.MetadataUI

@{
    ViewBag.Title = "Criar metadado";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@ViewBag.Title</h2>
                <hr class="hard">
                <div>
                    <form asp-controller="MetadataUI" asp-action="Create" method="post">
                        <div class="form-horizontal">
                            <hr />
                            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                            <input asp-for="ModelId" type="hidden" />
                            <div class="form-group">
                                <label asp-for="Property" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="Property" class="form-control" />
                                    <span asp-validation-for="Property" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Value" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="Value" class="form-control" />
                                    <span asp-validation-for="Value" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <hr class="hard">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-success">
                                    <span class="glyphicon glyphicon-save" aria-hidden="true"> Salvar</span>
                                </button>
                            </div>
                        </div>
                        <div>
                            <a href="javascript:history.go(-1)">Voltar</a>
                        </div>
                    </form>
                </div>    
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="~/js/jquery.validate.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
}
