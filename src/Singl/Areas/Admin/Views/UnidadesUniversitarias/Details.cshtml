@model Singl.Models.UnidadeUniversitaria
@{ Singl.Models.Campus campus = null; }

@{
    ViewBag.Title = $"Detalhes da unidade universit√°ria \"{@Model.Nome}\"";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@ViewBag.Title</h2>
                <hr class="hard"/>
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Sigla)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Sigla)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                    @if(Model.Campi.Count != 0) {
                        <dt>Lista de campi</dt>
                        <dd>
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => campus.Sigla)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => campus.Nome)
                                    </th>
                                    <th></th>
                                </tr>
                            @foreach (var item in Model.Campi) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sigla)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        <div class="pull-right">
                                            <a href="/admin/campi/@item.Sigla" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Detalhes</a>
                                            <a href="/admin/campi/edit/@item.Sigla" class="btn btn-warning"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar</a>
                                            <a href="/admin/campi/delete/@item.Sigla" class="btn btn-danger">
                                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            </table>
                        </dd>  
                    }
                    </dl>
                </div>
                <hr class="hard"/>
                <div class="pull-right">
                    <a href="/admin/unidadesuniversitarias/edit/@Model.Sigla" class="btn btn-warning">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar</a>
                </div>
                <div>
                    <a href="javascript:history.go(-1)">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</section>

