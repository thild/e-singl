@model Singl.Models.Curriculo
@{ Singl.Models.Disciplina disciplina = null; }

@{
    ViewBag.Title = $"Detalhes do currículo {@Model.Nome}";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@Model.Curso.Nome</h2>
                <hr class="hard">
                <h3 class="section-heading">@ViewBag.Title</h3>
                <hr class="hard">
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Curso)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Curso.Nome)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Ano)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Ano)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.PrazoConclusao)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PrazoConclusao)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Regime)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Regime)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Series)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Series)
                        </dd>
                        <dt>Lista de disciplinas</dt>
                        <dd>
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => disciplina.Codigo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => disciplina.Nome)
                                    </th>
                                    <th></th>
                                </tr>
                            @foreach (var item in Model.Disciplinas) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Codigo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        <a asp-controller="Disciplina" asp-action="Details" asp-route-id="@item.Id" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Detalhes</a>
                                        <a asp-controller="Disciplina" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar</a>
                                        <a asp-controller="Disciplina" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a>
                                    </td>
                                </tr>
                            }
                            </table>
                        </dd>
                    </dl>
                </div>
                <hr class="hard"/>
                <div class="pull-right">
                    <a asp-controller="Curriculo" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar</a>
                </div>
                <div>
                    <a asp-controller="Curriculo" asp-action="Index" asp-route-cursoId="@Model.Curso.Id" >Voltar à lista</a>
                </div>
            </div>
        </div>
    </div>
</section>

