@model Singl.Models.Departamento
@{ Singl.Models.Curso curso = null; }

@{
    ViewBag.Title = $"Lista de cursos do departamento \"{@Model.Nome}\"";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@ViewBag.Title</h2>
                <hr class="hard">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => curso.Codigo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => curso.Nome)
                        </th>
                        <th></th>
                    </tr>
                @foreach (var item in Model.Cursos) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            <div class="pull-right">
                                <a asp-controller="Cursos" asp-action="Details" asp-route-id="@item.Codigo" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Detalhes</a>
                                <a asp-controller="Cursos" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar</a>
                                <a asp-controller="Cursos" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
                </table>
                <!--<hr class="hard">
                <div class="pull-right">
                    <a asp-controller="Cursos" asp-action="Create" class="btn btn-primary"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Criar curso</a>
                </div>-->
            </div>
        </div>
    </div>
</section>

