@model Neadm.Models.Disciplina

@{
    ViewBag.Title = "Create";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<div>
    <form asp-controller="Disciplina" asp-action="Create" method="post">
        <div class="form-horizontal">
            <h4>Disciplina</h4>
            <hr />
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Curso.Id" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Curso.Id" class="form-control" />
                    <span asp-validation-for="Curso.Id" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
    <div>
        <a asp-controller="Disciplina"  asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
