@model Neadm.Models.Curso

@{
    ViewBag.Title = "Criar curso";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Criar curso</h2>
<div>
    <form asp-controller="Curso" asp-action="Create" method="post">
    
        <div class="form-horizontal">
            <hr />
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Criar" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
    <div>
        <a asp-controller="Curso"  asp-action="Index">Voltar Ã  lista</a>
    </div>
</div>    
@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
