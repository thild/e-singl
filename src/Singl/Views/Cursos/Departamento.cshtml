@model Singl.Models.Departamento
@{ Singl.Models.Curso curso = null; }

@{
    ViewBag.Title = $"Lista de cursos do departamento \"{@Model.Nome}\"";
    Layout = "/Views/Shared/_InfoLayout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@ViewBag.Title</h2>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => curso.Codigo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => curso.Nome)
                        </th>
                        <th></th>
                    </tr>
                @foreach (var item in Model.Cursos) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo)
                        </td>
                        <td>
                            <a asp-controller="Cursos" asp-action="Details" asp-route-codigo="@item.Codigo">@item.Nome</a>
                        </td>
                        <td>
                            <div class="pull-right">
                                <a asp-controller="Cursos" asp-action="Details" asp-route-codigo="@item.Codigo" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Detalhes</a>
                            </div>
                        </td>
                    </tr>
                }
                </table>
                <hr class="hard"/>
                <div>
                    <a href="javascript:history.go(-1)">Voltar</a>
                </div>                
            </div>
        </div>
    </div>
</section>

