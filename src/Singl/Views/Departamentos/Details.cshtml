@model Singl.Models.Departamento
@{ Singl.Models.Curso curso = null; }

@{
    ViewBag.Title = $"Detalhes do departamento \"{@Model.Nome}\"";
    Layout = "/Views/Shared/_InfoLayout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@ViewBag.Title</h2>
                <hr class="hard"/>
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Sigla)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Sigla)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                    @if(Model.Cursos.Count != 0) {
                        <dt>Lista de cursos</dt>
                        <dd>
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => curso.Codigo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => curso.Nome)
                                    </th>
                                    <th></th>
                                </tr>
                            @foreach (var item in Model.Cursos) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Codigo)
                                    </td>
                                    <td>
                                        <a href="/cursos/@item.Codigo">@item.Nome</a>
                                    </td>
                                    <td>
                                        <div class="pull-right">
                                            <a href="/cursos/@item.Codigo" class="btn btn-default">
                                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Detalhes</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            </table>
                        </dd>
                    }
                    </dl>
                </div>
                <hr class="hard"/>
                <div>
                    <a href="javascript:history.go(-1)">Voltar</a>
                </div>      
            </div>
        </div>
    </div>
</section>

