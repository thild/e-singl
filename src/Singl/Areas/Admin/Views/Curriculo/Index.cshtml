@model Singl.ViewModels.CurriculoIndexViewModel
@{var dummy = new Singl.Models.Curriculo();}

@{
    ViewBag.Title = "Lista de currículos";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@Model.Curso.Nome</h2>
                <hr class="hard">
                <h3 class="section-heading">@ViewBag.Title</h3>
                <hr class="hard">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => dummy.Ano)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => dummy.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => dummy.PrazoConclusao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => dummy.Regime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => dummy.Series)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => dummy.SituacaoCurriculo)
                        </th>
                        <th></th>
                    </tr>
                    
                @foreach (var item in Model.Curriculos) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ano)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrazoConclusao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Regime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Series)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SituacaoCurriculo)
                        </td>
                        <td>
                            <div class="pull-right">
                                <a asp-controller="Curriculo" asp-action="Details" asp-route-id="@item.Id" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Detalhes</a>
                                <a asp-controller="Curriculo" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar</a>
                                <a asp-controller="Curriculo" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a>
                            </div>                            
                        </td>
                    </tr>
                }
                </table>
                <hr class="hard">
                <div class="pull-right">
                    <a asp-controller="Curriculo" asp-action="Create" asp-route-cursoId="@Model.Curso.Id" class="btn btn-primary">
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Criar currículo</a>
                </div>                        
                <div>
                    <a asp-controller="Curso" asp-action="Details" asp-route-id="@Model.Curso.Id">Voltar ao curso</a>
                </div>                
            </div>
        </div>
    </div>
</section>