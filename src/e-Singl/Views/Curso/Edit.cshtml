@model Neadm.Models.Curso

@{
    ViewBag.Title = $"Editar curso \"{@Model.Nome}\"";
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@ViewBag.Title</h2>
                <hr class="hard">
                <div>
                    <form asp-controller="Curso" asp-action="Edit" method="post">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                            <input asp-for="Id" type="hidden" />
                            <div class="form-group">
                                <label asp-for="Codigo" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="Codigo" class="form-control" />
                                    <span asp-validation-for="Codigo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Tipo" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<TipoCurso>()" 
                                        class="form-control" ></select>
                                    <span asp-validation-for="Tipo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="PerfilEgresso" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <textarea asp-for="PerfilEgresso" rows="10" class="form-control"></textarea>
                                    <span asp-validation-for="PerfilEgresso" class="text-danger"></span>
                                </div>
                            </div>
                            <hr class="hard"/>
                            <div class="pull-right">
                                <button type="submit" class="btn btn-success">
                                    <span class="glyphicon glyphicon-save" aria-hidden="true"> Salvar</span>
                                </button>    
                            </div>
                            <div>
                                <a asp-controller="Curso"  asp-action="Index">Voltar Ã  lista</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
                
@section Scripts {
    <script src="~/js/jquery.validate.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
}

