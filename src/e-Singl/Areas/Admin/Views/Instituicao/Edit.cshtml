@model Singl.Models.Instituicao

@{
    ViewBag.Title = "Editar instituição";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@ViewBag.Title</h2>
                <hr class="light">
                <form asp-action="Edit">
                    <div class="form-horizontal">
                        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger" />
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Email" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <textarea asp-for="Endereco" rows="5" class="form-control"></textarea>
                                <span asp-validation-for="Endereco" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Fax" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Fax" class="form-control" />
                                <span asp-validation-for="Fax" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sobre" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <textarea asp-for="Sobre" rows="10" class="form-control"></textarea>
                                <span asp-validation-for="Sobre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefone" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Telefone" class="form-control" />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Vinculo" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Vinculo" class="form-control" />
                                <span asp-validation-for="Vinculo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Salvar" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </form>
                
                <div>
                    <a asp-action="Index">Voltar a instituição</a>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script src="~/js/jquery.validate.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
}