@model IEnumerable<Neadm.Models.Curso>

@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Lista de cursos</h2>

<p>
    <a asp-controller="Curso" asp-action="Create">Criar curso</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            <a asp-controller="Curso" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
            <a asp-controller="Curso" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
            <a asp-controller="Curso" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
        </td>
    </tr>
}
</table>

