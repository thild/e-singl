@model IEnumerable<Singl.Models.Curso>

@{
    ViewBag.Title = "Lista de cursos";
    Layout = "/Views/Shared/_InfoLayout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@ViewBag.Title</h2>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Codigo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th></th>
                    </tr>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo)
                        </td>
                        <td>
                            <a href="/cursos/@item.Codigo">@item.Nome</a>
                        </td>                        
                        <td>
                            <div class="pull-right">
                                <a  href="/cursos/@item.Codigo" class="btn btn-default">
                                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Detalhes</a>
                            </div>
                        </td>
                    </tr>
                }
                </table>
                <hr class="hard"/>
                <div>
                    <a href="javascript:history.go(-1)">Voltar</a>
                </div>                
            </div>
        </div>
    </div>
</section>

