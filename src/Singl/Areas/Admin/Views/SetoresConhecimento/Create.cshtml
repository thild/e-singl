@inject Singl.Services.ISetorConhecimentoService SetorConhecimentoService

@model Singl.Models.SetorConhecimento

@{
    ViewBag.Title = "Criar setor de conhecimento";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading">@ViewBag.Title</h2>
                <hr class="hard">
                <div>
                    <form asp-controller="SetoresConhecimento" asp-action="Create" method="post">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Sigla" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="Sigla" class="form-control" />
                                    <span asp-validation-for="Sigla" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="SuperSetorId" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <select asp-for="SuperSetorId" 
                                        asp-items="@SetorConhecimentoService.GetAll().Select(x => new SelectListItem { Text = x.Nome, Value = x.Id.ToString() })" 
                                        class="form-control"></select>
                                    <span asp-validation-for="SuperSetorId" class="text-danger"></span>
                                </div>
                            </div>
                            <hr class="hard">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-success">
                                    <span class="glyphicon glyphicon-save" aria-hidden="true"> Salvar</span>
                                </button>
                            </div>
                            <div>
                                <a asp-controller="SetoresConhecimento"  asp-action="Index">Voltar Ã  lista</a>
                            </div>
                        </div>
                    </form>
                </div>    
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/jquery.validate.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
}
